<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listView">

    <TextView
        android:id="@+id/rowResult1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.22"
        android:background="@color/colorCustomList2"
        android:gravity="right"
        android:text="@string/var"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/rowResult2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.18"
        android:background="@color/colorCustomList1"
        android:gravity="right"
        android:text="@string/var"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/rowResult3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:background="@color/colorCustomList2"
        android:gravity="right"
        android:text="@string/var"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/full_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:background="@color/colorCustomList1"
        android:gravity="right"
        android:text="@string/var"
        android:textAlignment="gravity" />

    <Button
        android:id="@+id/button_del"
        android:text="@string/del_entry_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:onClick="newEntry (FuelCalcActivity)"/>
</LinearLayout>