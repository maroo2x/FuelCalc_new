<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/results_fuel_calc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="higheye.fuelcalculator.ResultsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomList2"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:textStyle="bold">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:background="@color/colorCustomList2"
                android:gravity="center"
                android:text="@string/date"
                android:textStyle="bold"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@color/colorCustomList2"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/fuel_quantity"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:gravity="center"
                android:text=""
                android:textAlignment="gravity" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorCustomList2"
            android:orientation="horizontal"
            android:layout_gravity="top">

            <TextView
                android:id="@+id/textView2x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@color/colorCustomList2"
                android:gravity="center"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:background="@color/colorCustomList1"
                android:gravity="top|center_horizontal"
                android:textStyle="bold"
                android:text="@string/mileage"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/textView6x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@color/colorCustomList2"
                android:gravity="center"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:background="@color/colorCustomList1"
                android:gravity="top|center_horizontal"
                android:text="@string/avgcons"
                android:textStyle="bold"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/textView82"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text=""
                android:textAlignment="gravity" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout" />
</RelativeLayout>
