<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="higheye.fuelcalc.ChooseActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/car_results"
        android:layout_above="@+id/new_car_button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:maxLength="26"
        android:layout_alignParentBottom="true"
        android:id="@+id/car_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/new_car_button"
        android:layout_toStartOf="@+id/new_car_button" />

    <Button
        android:text="@string/add_car_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_car_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="addCar" />
</RelativeLayout>
